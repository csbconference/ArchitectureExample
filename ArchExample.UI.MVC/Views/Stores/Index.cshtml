@model List<ArchExample.UI.MVC.Models.StoreModel>

@{
    ViewBag.Title = "Stores";
}

<h2>Stores</h2>

<div>
    <table class="table table-hover table-striped dataTable display compact">
        <thead class="thead-inverse">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Address</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr role="row">
                    <td>
                        @item.Id
                    </td>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.Address
                    </td>
                    <td>
                        <a href="/Employees/Index?storeId=@(item.Id)">Employees</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>